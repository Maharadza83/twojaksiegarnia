@model ksiegarnia.Models.Domain.Genre
@{
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4; /* Jasny szary kolor tła */
        color: #333; /* Ciemnoszary kolor tekstu */
        margin: 0; /* Usunięcie marginesów */
        padding: 0; /* Usunięcie wewnętrznych marginesów */
    }

    .w-40 {
        width: 40%;
    }

    .input-container {
        margin-bottom: 200px;
    }

    .input {
        padding: 10px;
        border: 2px solid #ccc; /* Jasny szary kolor obramowania */
        border-radius: 5px;
        font-size: 16px;
        width: calc(100% - 120px); /* Szerokość inputu z uwzględnieniem miejsca na etykietę */
        box-sizing: border-box;
        background-color: #f8f8f8; /* Jasnoszary kolor tła inputu */
    }

    .message-box {
        font-size: 16px;
        padding: 10px;
    }

    .error {
        color: #d32f2f; /* Czerwony kolor dla komunikatów o błędach */
    }

    .alert {
        background-color: #e0e0e0; /* Jasnoszary kolor tła dla komunikatów */
        color: #555555; /* Ciemnoszary kolor tekstu */
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .btn {
        padding: 10px 15px;
        border: 2px solid #555555; /* Ciemnoszary kolor obramowania */
        border-radius: 5px;
        background-color: transparent;
        color: #555555; /* Ciemnoszary kolor tekstu */
        font-size: 16px;
        text-decoration: none;
        margin-right: 10px;
        cursor: pointer;
    }

    .btn-default:hover {
        background-color: #555555; /* Ciemnoszary kolor tła po najechaniu myszką */
        color: #fff; /* Biały kolor tekstu po najechaniu myszką */
    }

    .btn-sec {
        border-color: #555555; /* Ciemnoszary kolor obramowania */
        color: #555555; /* Ciemnoszary kolor tekstu */
    }

        .btn-sec:hover {
            background-color: #555555; /* Ciemnoszary kolor tła po najechaniu myszką */
            color: #fff; /* Biały kolor tekstu po najechaniu myszką */
        }

    /* Dodany kontener formularza o trzykrotnie większej szerokości */
    .form-container {
        max-width: 1200px;
        margin: 0 auto;
        margin-top: 20px; /* Dodany margines na górze dla kontenera formularza */
    }

    h2 {
        color: #555555; /* Ciemnoszary kolor tekstu nagłówka */
        text-align: center; /* Wyśrodkowanie tekstu */
    }
</style>

<div class="form-container">
    <!-- Dodany kontener formularza -->
    <form class="w-40" asp-action="Update" method="post">
        <h2 class="pb-10">Edytuj autora</h2>
        <input type="hidden" class="input" asp-for="Id">

        <div class="input-container">
            <label asp-for="GenreName" class="w-40">Nazwa autora</label>
            <input type="text" class="input" asp-for="GenreName">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="GenreName"> </span>
        </div>

        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }

        <div class="input-container">
            <button class="btn btn-default" type="submit">Zapisz</button>
            <a class="btn btn-sec" href="/Genre/GenreList">Zobacz wszystkich</a>
        </div>
    </form>
</div>
