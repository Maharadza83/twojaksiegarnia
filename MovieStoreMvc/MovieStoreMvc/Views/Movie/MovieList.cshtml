@model ksiegarnia.Models.DTO.MovieListVm
@{
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .tbl-container {
        max-width: 800px;
        margin: 200px auto;
        padding: 20px;
    }

    h2 {
        color: #555555;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #f0f0f0;
        color: #555555;
    }

    img {
        height: 60px;
        width: 80px;
    }

    .btn {
        padding: 8px 12px;
        border: 2px solid #555555;
        border-radius: 5px;
        background-color: transparent;
        color: #555555;
        font-size: 16px;
        text-decoration: none;
        margin-right: 10px;
        cursor: pointer;
    }

    .btn-default:hover {
        background-color: #555555;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #d32f2f;
        border-color: #d32f2f;
        color: #fff;
    }

    .btn-sec {
        border-color: #555555;
        color: #555555;
    }

        .btn-sec:hover {
            background-color: #555555;
            color: #fff;
        }

    .input-container {
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="tbl-container">
    <h2>Książki</h2>

    <table>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Data wydania</th>
            <th>Zdjęcie</th>
            <th>Gatunek</th>
            <th>Opis</th>
            <th>Dostępne opcje</th>
        </tr>
        @foreach (var item in Model.MovieList)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.GenreNames</td>
                <td>@item.ReleaseYear</td>
                <td><img src="/Uploads/@item.MovieImage" /></td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                <td>
                    <a href="/Movie/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/Movie/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>

    <div class="input-container">
        <a href="/Movie/Add" class="btn btn-sec">Wróć</a>
    </div>
</div>
